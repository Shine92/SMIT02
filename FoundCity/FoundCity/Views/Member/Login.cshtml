@model FoundCity.ViewModels.MemberLoginViewModelcs

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}

<div id="" class="member_LoginPage">
    <div class="container">
        <div class="member_Login">
            <form class="form-horizontal" action="" method="post">
                <div class="form-group">
                    <label class="control-label col-sm-3" for="UserAccount">帳號:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="UserAccount" placeholder="" name="Account">
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="UserPassword">密碼:</label>
                    <div class="col-sm-7">
                        <input type="password" class="form-control" id="UserPassword" placeholder="" name="Password">
                    </div>
                </div>
                <div id="info" class="col-sm-7 col-lg-offset-3">
                    <p>帳號或密碼錯誤！</p>
                </div>
                <div class="memberLogin_decoration"></div>
                <div class="form-group">
                    <div class="col-sm-7 col-sm-offset-2">
                        <label class="checkbox-inline"><input type="checkbox" id="LoginRemeber" name="Remember" value="false">記住我</label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button type="submit" id="LoginBtn" class="btn btn-success btn-block">登入</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-8">
                        <a href="/Member/Forget">忘記密碼? | </a>
                        <a href="/Member/Register">註冊</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

